{
    "name": "yoozi/golem",
    "description": "PHP development toolkit for Yoozi RD team.",
    "keywords": ["yoozi", "email", "metadata", "laravel", "toolkit", "LBS"],
    "homepage": "http://golem.yoozi.cn/",
    "license": "MIT",
    "authors": [
        {
            "name": "Saturn HU",
            "email": "yangg.hu@yoozi.cn"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "nesbot/carbon": "~1.0",
        "kriswallsmith/buzz": "~0.10",
        "illuminate/support": "~4.0",
        "jeremykendall/php-domain-parser": "~1.3"
    },
    "replace": {
        "yoozi/email": "self.version",
        "yoozi/miner": "self.version",
        "yoozi/notification": "self.version",
        "yoozi/lbs": "self.version" 
    },
    "require-dev": {
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "3.7.*",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-0": {
            "Yoozi": "lib/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1.x-dev"
        }
    },
    "minimum-stability": "stable"
}
